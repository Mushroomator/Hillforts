<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tp.hillforts">

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hillforts">

        <!-- Login View -->
        <activity
            android:name=".views.login.LoginView"
            android:label="@string/title_login_view">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Hillford List View -->
        <activity android:name=".views.hillfordList.HillfordListView">
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".views.login.LoginView" />
        </activity>

        <!-- Hillford Details View -->
        <activity android:name=".views.hillfortDetails.HillfortDetailsView">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.hillfordList.HillfordListView" />
        </activity>

    </application>

</manifest>